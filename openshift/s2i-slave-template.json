{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "s2i-to-jenkins-slave",
    "creationTimestamp": null,
    "annotations": {
      "description": "Provides the conversion of S2I image to a Jenkins slave",
      "iconClass": "icon-jenkins"
    }
  },
  "labels": {
    "template": "s2i-jenkins-slave"
  },
  "parameters": [
    {
      "name": "IMAGE_NAME",
      "description": "Docker image this Jenkins slave should be created from",
      "value": "ruby-20-centos7",
      "required": true
    },
    {
      "name": "JENKINS_SLAVE_LABELS",
      "description": "Define what labels this Jenkins slave will get",
      "value": "builder"
    },
    {
      "name": "JENKINS_MASTER_URL",
      "description": "The Jenkins Master URL",
      "value": "http://jenkins:8080"
    },
    {
      "name": "JENKINS_USERNAME",
      "description": "The username of the Jenkins master server",
      "value": "admin"
    },
    {
      "name": "JENKINS_PASSWORD",
      "description": "The password for the Jenkins master server",
      "required": true,
      "value": "password"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-slave"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "nodePort": 0
          },
          {
            "name": "jnlp",
            "protocol": "TCP",
            "port": 49187,
            "targetPort": 49187,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "${IMAGE_NAME}-slave"
        },
        "portalIP": "",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}"
      },
      "spec": {
        "dockerImageRepository": "openshift/${IMAGE_NAME}"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-jenkins-slave"
      },
      "spec": {}
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-slave",
        "annotations": {
          "description": "Modifies the ${IMAGE_NAME} to run as Jenkins slave"
        },
        "labels": {
          "name": "${IMAGE_NAME}-slave"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "imageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "source": {
          "type": "Git",
          "contextDir": "jenkins-slave",
          "git": {
            "uri": "git://github.com/mfojtik/jenkins-ci.git"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "${IMAGE_NAME}:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${IMAGE_NAME}-jenkins-slave:latest"
          }
        },
        "resources": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-slave"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "jenkins-slave"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${IMAGE_NAME}-jenkins-slave:latest"
              },
              "lastTriggeredImage": ""
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${IMAGE_NAME}-slave"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${IMAGE_NAME}-slave"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "jenkins-slave",
                "image": "${IMAGE_NAME}-jenkins-slave",
                "command": [ "/opt/app-root/jenkins/run-swarm-client" ],
                "ports": [
                  {
                    "containerPort": 49187,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "JENKINS_MASTER_URL",
                    "value": "${JENKINS_MASTER_URL}"
                  },
                  {
                    "name": "JENKINS_SLAVE_LABELS",
                    "value": "${JENKINS_SLAVE_LABELS}"
                  },
                  {
                    "name": "IMAGE_NAME",
                    "value": "${IMAGE_NAME}"
                  },
                  {
                    "name": "JENKINS_PASSWORD",
                    "value": "${JENKINS_PASSWORD}"
                  },
                  {
                    "name": "JENKINS_USERNAME",
                    "value": "${JENKINS_USERNAME}"
                  }
                ],
                "resources": {},
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "serviceAccount": ""
          }
        }
      },
      "status": {}
    }
  ]
}
