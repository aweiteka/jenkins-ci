{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "s2i-jenkins-slave",
    "creationTimestamp": null,
    "annotations": {
      "description": "This template will convert an arbitrary S2I image to a jenkins slave"
    }
  },
  "parameters": [
    {
      "name": "IMAGE_NAME",
      "description": "The name of the S2I image stream to use as a Jenkins slave",
      "value": "ruby-20-centos7",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}"
      },
      "spec": {
        "dockerImageRepository": "openshift/${IMAGE_NAME}"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-jenkins-slave"
      },
      "spec": {}
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "jenkins-slave-${IMAGE_NAME}",
        "annotations": {
          "description": "Modifies the ${IMAGE_NAME} to run as Jenkins slave"
        },
        "labels": {
          "name": "${IMAGE_NAME}-jenkins-slave"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "imageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "source": {
          "type": "Git",
          "contextDir": "jenkins-slave",
          "git": {
            "uri": "git://github.com/mfojtik/jenkins-ci.git"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "${IMAGE_NAME}:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${IMAGE_NAME}-jenkins-slave:latest"
          }
        },
        "resources": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${IMAGE_NAME}-jenkins-slave"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "slave"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${IMAGE_NAME}-jenkins-slave:latest"
              },
              "lastTriggeredImage": ""
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 2,
        "selector": {
          "name": "${IMAGE_NAME}-jenkins-slave"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${IMAGE_NAME}-jenkins-slave"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "slave",
                "image": "${IMAGE_NAME}-jenkins-slave",
                "command": [ "/usr/local/bin/run-jenkins-slave" ],
                "ports": [
                  {
                    "containerPort": 49187,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [],
                "resources": {},
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "serviceAccount": ""
          }
        }
      },
      "status": {}
    }
  ]
}
